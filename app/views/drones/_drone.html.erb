<div class="drone-errors">
  <%= render 'shared/errors', resource: @drone %>
</div>
<% if @drone.foto.attached? %>
  <header class="masthead" style="background-image: url('<%= url_for(@drone.foto) %>')">
<% else %>
  <header class="masthead" style="background-image: url('/drone_default.jpg')">
<% end %>
<div class="row">
  <div class="col-lg-12 col-md-10 mx-auto">
    <div class="post-heading">
    </div>
  </div>
</div>
</header>
<div class="title_header">
  <div class="float-start pt-1">
    <div class="title_logo">
      <%= @drone.title %>
    </div>
    <div class="title_meta">
      Category: <%= @category_cat.title %>, posted by <a href="<%= profile_path(@drone.user) %>"><%= @drone.user.username %></a>
    </div>
  </div>
</div>
<hr>
<div class="float-start pt-1">
  <div class="likes">
    <td><%= render partial: 'drones/upvote_link' %></td>
  </div>
</div>
<div class="float-end pt-1">
  <% if policy(@drone).edit? %>
    <%= link_to 'Edit build', edit_drone_path(@drone), class: 'btn btn-info btn-sm' %>
  <% end %>
  <% if policy(@drone).destroy? %>
    <%= link_to 'Delete build', drone_path(@drone), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
  <% end %>
</div>
<br><br>
