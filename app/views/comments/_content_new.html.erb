<div class="comment_<%= @comment.id %>">
  <div class="card">
    <div class="card-body">
      <div class="d-flex flex-start align-items-center">
        <img class="rounded-circle shadow-1-strong me-3"
          src="/avatar.webp" alt="avatar" width="60"
          height="60" />
        <div>
          <h6 class="fw-bold text-primary mb-1"><%= @comment.user.email %></h6>
          <p class="text-muted small mb-0">
            Written - <%= @comment.created_at.strftime("%B %d %Y, %k:%M") %>
          </p>
        </div>
      </div>
      <p class="mt-3">
        <%= @comment.body %>
        <p>
      </p>
      <div class="small float-start pt-1">
        <%= link_to 'Edit', edit_drone_comment_path(@drone, @comment), class: 'btn btn-outline-primary' %>
        <%= link_to 'Delete', drone_comment_path(@drone, @comment), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
      </div>
      <div class="small d-flex justify-content-end">
        <a href="#!" class="d-flex align-items-center me-3">
          <i class="far fa-thumbs-up me-2"></i>
          <div class="mb-0">Like</div>
        </a>
      </div>
    </div>
  </div>
<br>
</div>
