<%= content_tag "div", id: "upvote-#{comment.id}" do %>
  <b><%= comment.cached_votes_total %></b>
  <%= link_to upvote_comment_path(comment), method: :patch, remote: true do %>
    <% if current_user.voted_up_on? comment %>
      <i class="fa-solid fa-heart fa-xl" style="color: red;"></i>
    <% else %>
      <i class="fa-regular fa-heart fa-xl"></i>
    <% end %>
  <% end %>
<% end %>
