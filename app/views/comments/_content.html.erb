<div class="comment-errors">
  <%= render 'shared/errors', resource: @comment %>
</div>
<% @drone.comments.each do |comment| %>
<div class="comment_<%= comment.id %>">
  <div class="card">
    <div class="card-body">
      <div class="d-flex flex-start align-items-center">
        <img class="rounded-circle shadow-1-strong me-3"
          src="/avatar.webp" alt="avatar" width="60"
          height="60" />
        <div>
          <h6 class="fw-bold text-primary mb-1"><%= comment.user.email %></h6>
          <p class="text-muted small mb-0">
            Written - <%= comment.created_at.strftime("%B %d %Y, %k:%M") %>
          </p>
        </div>
      </div>
      <p class="mt-3">
        <%= comment.body %>
        <p>
      </p>
      <% if current_user&.author?(comment) %>
        <div class="small float-start pt-1">
          <%= link_to 'Edit', '#', remote: true, data: { comment_id: comment.id }, class: 'btn btn-outline-primary edit-comment-link' %>
          <%= link_to 'Delete', drone_comment_path(@drone, comment), method: :delete, remote: true, data: { confirm: 'Are you sure?', comment_id: comment.id }, class: 'btn btn-danger' %>
        </div>
      <% end %> 
      <div class="small d-flex justify-content-end">
        <a href="#!" class="d-flex align-items-center me-3">
          <i class="far fa-thumbs-up me-2"></i>
          <div class="mb-0">Like</div>
        </a>
      </div>
      <br>
      <%= form_with model: [@drone, comment], local: false, class: 'hidden', html: { id: "edit-comment-#{comment.id}" } do |f| %>
        <div class="form-floating">
          <%= f.text_area :body, class: "form-control", placeholder: "Leave a comment here", id: "floatingTextarea" %>
          <label for="floatingTextarea">Leave a comment here</label>
          <div class="float-start mt-2 pt-1">
            <%= f.submit 'Update comment', class: "btn btn-primary" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
<br>
</div>
<% end %>
