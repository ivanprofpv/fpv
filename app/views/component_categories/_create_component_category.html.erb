<div class="post_content">
  <% if policy(@component_category).create? %>
    <div class="container">
      <div class="row d-flex justify-content-center align-items-center">
        <div class="col-12 col-md-9 col-lg-7 col-xl-9">
            <div class="card-body p-5">
              <h2 class="text-uppercase text-center mb-5">Create component category</h2>

                <%= form_with model: @component_category, local: true do |f| %>
                <div class="drone-errors">
                  <%= render 'shared/errors', resource: @component_category %>
                </div>

                <div class="form-floating mb-5">
                  <%= f.text_area :title, class: "form-control", placeholder: "Title", id: "floatingTextarea" %>
                  <label for="floatingTextarea">Title</label>
                </div>

                <div class="d-grid gap-2">
                  <%= f.submit "Create", class: 'btn btn-info btn-lg' %>
                </div> 
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>