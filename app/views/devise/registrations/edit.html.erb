<br>
<div class="container">
  <div class="main-body">
      <div class="row gutters-sm">
        <div class="col-md-4 mb-3">
          <div class="card">
            <div class="card-body">
              <div class="d-flex flex-column align-items-center text-center">
                <% if current_user.avatar.attached? %>
                  <img src="<%= url_for(current_user.avatar) %>" alt="<%= current_user.username %>" class="rounded-circle" width="150">
                <% else %>
                  <img src="/avatar_default.png" alt="<%= current_user.username %>" class="rounded-circle" width="150">
                <% end %>
                <div class="mt-3">
                  <h4><%= current_user.username %></h4>
                </div>
              </div>
            </div>
          </div>
          <div class="card mt-3">
            <ul class="list-group list-group-flush">
              <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                <h6 class="mb-0">Drones: </h6>
                <span class="text-secondary">1</span>
              </li>
              <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                <h6 class="mb-0">Comments: </h6>
                <span class="text-secondary">1</span>
              </li>
            </ul>
          </div>
        </div>
        <div class="col-md-8">
          <div class="card mb-3">
            <div class="card-body">
              <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
                <div class="drone-errors">
                  <%= render "devise/shared/error_messages", resource: resource %>
                </div>

                  <div class="form-floating mb-3">
                    <h2>Settings</h2>
                  </div>

                  <div class="form-floating mb-3">
                    <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Email", id: "Email" %>
                    <label for="Email">Email</label><p>
                    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
                    <% end %>
                  </div>

                  <div class="form-floating mb-3">
                    <%= f.password_field :password, class: "form-control", placeholder: "New password", id: "NewPassword" %>
                    <label for="New password">New password</label>
                    <% if @minimum_password_length %>
                      <br />
                      <em><%= @minimum_password_length %> characters minimum</em>
                    <% end %>
                  </div>

                  <div class="form-floating mb-3">
                    <%= f.password_field :password_confirmation, class: "form-control", placeholder: "New password confirmation", id: "PasswordConfirmation" %>
                    <label for="PasswordConfirmation">New password confirmation</label>
                  </div>

                  <div class="form-floating mb-3">
                    <%= f.password_field :current_password, class: "form-control", placeholder: "Current password", id: "CurrentPassword" %>
                    <label for="CurrentPassword">Current password</label>
                  </div>

                   <div class="input-group mb-3">
                    <label class="input-group-text" for="inputGroupFile01">Upload new avatar</label>
                    <%= f.file_field :avatar, class: "form-control", id: "inputGroupFile01"%>
                  </div>

                  <div class="d-grid gap-2">
                    <%= f.submit "Update", class: 'btn btn-info btn-lg btn-sm' %>
                  </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
