<br>
<div class="container">
  <div class="main-body">

      <div class="row gutters-sm">
        <div class="col-md-4 mb-3">
          <div class="card">
            <div class="card-body">
              <div class="d-flex flex-column align-items-center text-center">
                <% if @profile.avatar.attached? %>
                  <img src="<%= url_for(@profile.avatar) %>" alt="<%= current_user.username %>" class="rounded-circle" width="150">
                <% else %>
                  <img src="/avatar_default.png" alt="<%= current_user.username %>" class="rounded-circle" width="150">
                <% end %>
                <div class="mt-3">
                  <h4><%= current_user.username %></h4>
                  <button class="btn btn-primary">Follow</button>
                  <button class="btn btn-outline-primary">Message</button>
                </div>
              </div>
            </div>
          </div>
          <div class="card mt-3">
            <ul class="list-group list-group-flush">
              <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                <h6 class="mb-0">Drones: </h6>
                <span class="text-secondary">1</span>
              </li>
              <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                <h6 class="mb-0">Comments: </h6>
                <span class="text-secondary">1</span>
              </li>
            </ul>
          </div>
        </div>
        <div class="col-md-8">
          <div class="card mb-3">
            <div class="card-body">
              <% if current_user&.author?(@profile) %>
              <%= form_with model: @profile, local: true do |f| %>
                  <div class="drone-errors">
                    <%= render 'shared/errors', resource: @profile %>
                  </div>

                  <div class="form-floating mb-3">
                    <%= f.text_area :name, class: "form-control", placeholder: "Name", id: "floatingTextarea" %>
                    <label for="floatingTextarea">Name</label>
                  </div>

                  <div class="form-floating mb-3">
                    <%= f.text_area :about, class: "form-control", placeholder: "About me", id: "floatingTextarea" %>
                    <label for="floatingTextarea">About me</label>
                  </div>

                  <div class="form-floating mb-3">
                    <%= f.text_area :city, class: "form-control", placeholder: "City", id: "floatingTextarea" %>
                    <label for="floatingTextarea">City</label>
                  </div>

                  <div class="input-group mb-3">
                    <label class="input-group-text" for="inputGroupFile01">Upload avatar</label>
                    <%= f.file_field :avatar, class: "form-control", id: "inputGroupFile01"%>
                  </div>

                  <div class="d-grid gap-2">
                    <%= f.submit "Update", class: 'btn btn-info btn-lg btn-sm' %>
                  </div>
                <% end %>
                <% end %>
            </div>
          </div>
        </div>
      </div>

    </div>
  </div>
