<br>
<div class="container">
  <div class="main-body">

      <div class="row gutters-sm">
        <div class="col-md-4 mb-3">
          <div class="card">
            <div class="card-body">
              <div class="d-flex flex-column align-items-center text-center">
                <img src="<%= url_for(@profile.avatar) %>" alt="<%= current_user.username %>" class="rounded-circle" width="150">
                <div class="mt-3">
                  <h4><%= current_user.username %></h4>
                  <button class="btn btn-primary">Follow</button>
                  <button class="btn btn-outline-primary">Message</button>
                </div>
              </div>
            </div>
          </div>
          <div class="card mt-3">
            <ul class="list-group list-group-flush">
              <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                <h6 class="mb-0">Drones: </h6>
                <span class="text-secondary">1</span>
              </li>
              <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                <h6 class="mb-0">Comments: </h6>
                <span class="text-secondary">1</span>
              </li>
            </ul>
          </div>
        </div>
        <div class="col-md-8">
          <div class="card mb-3">
            <div class="card-body">
              <% if current_user&.author?(@profile) %>
              <div class="row">
                <div class="col-sm-3">
                  <h6 class="mb-0">Email</h6>
                </div>
                <div class="col-sm-9 text-secondary">
                  <%= current_user.email %>
                </div>
              </div>
              <hr>
              <% end %>
              <div class="row">
                <div class="col-sm-3">
                  <h6 class="mb-0">Name</h6>
                </div>
                <div class="col-sm-9 text-secondary">
                  <%= @profile.name %>
                </div>
              </div>
              <hr>
              <div class="row">
                <div class="col-sm-3">
                  <h6 class="mb-0">About me</h6>
                </div>
                <div class="col-sm-9 text-secondary">
                  <%= @profile.about %>
                </div>
              </div>
              <hr>
              <div class="row">
                <div class="col-sm-3">
                  <h6 class="mb-0">City</h6>
                </div>
                <div class="col-sm-9 text-secondary">
                  <%= @profile.city %>
                </div>
              </div>
              <hr>
              <div class="row">
                <div class="col-sm-12">
                  <%= link_to 'Edit Profile', edit_profile_path, class: "btn btn-info btn-sm", target: "__blank" %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

    </div>
  </div>
